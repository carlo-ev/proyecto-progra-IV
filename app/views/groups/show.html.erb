<h1>Groups#show</h1>
<p>Find me in app/views/groups/show.html.erb</p>
<div class="row-fluid">
	<div class="span2">
		<%= image_tag @group.logo.url(:medium) %>
	</div>
	<div class="span10">
		<div class="page-header"><h2><%= @group.name %></h2></div>

		<div class="tabbable">
			<ul class="nav nav-pills">
				<li class="active"><a href="#tab1" data-toggle="tab">News Feed</a></li>
				<li><a href="#tab2" data-toggle="tab">Info</a></li>
				<li><a href="#tab3" data-toggle="tab">Members</a></li>
				<li><a href="#tab4" data-toggle="tab">Events</a></li>
			</ul>

			<div class="tab-content">
				<div class="tab-pane active" id="tab1">
					<div class="well">
					</div>
				</div>
				<div class="tab-pane" id="tab2">	
					<div class="well">
						<label><span class="label">Description</span></label>
						<p><%= @group.description %></p>
						<label><span class="label">Category</span></label>
						<p><%= @group.category.name if @group.category %></p>
						<label><span class="label">Created in</span></label>
						<p><%= @group.created_at %></p>
					</div>
				</div>
				<div class="tab-pane" id="tab3" >
					<div class="well">
						<table class="table table-striped">
							<thead>
								<tr>
									<th>Pic</th><th>Username</th>
								</tr>
							</thead>
							<tbody>
								<tr>
									<td>Picture 1</td><td>Username 1</td>
								</tr>
								<tr>
									<td>Picture 2</td><td>Username 2</td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
				<div class="tab-pane" id="tab4">
					<p>Events</p>
				</div>		
			</div>
		</div>
		
	</div>

</div>
